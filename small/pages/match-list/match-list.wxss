/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.select{
  display: flex;
  padding: 13px 0 10px 0;
  border-bottom:1px solid rgb(222, 222, 222);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 11;
  background: white;
}

.select .select-match, .select .select-type{
  flex: 1;
  text-align: center;
  font-size: 14px;
  height: 20px;
  position: relative;
}

.select .select-match{
  border-right: 1px solid rgb(222, 222, 222);
  box-sizing: content-box;
  position: relative;
}

.select .select-match::before, .select .select-type::before{
  content: "";
  position: absolute;
  border-top: 5px dotted transparent;
  border-bottom: 5px dotted transparent;
  border-left: 5px solid rgb(77, 77, 77);
  transform: rotate(40deg);
  right: 40px;
  top: 9px;
}

.match-list{
  position: fixed;
  height: calc(100% - 45px);
}

.item{
  display: flex;
  padding:15px;
  height:80px;
}

.item-img{
  width: 80px;
  padding-right:15px;
}

.item-description{
  flex: 1;
}

.item-title{
  display: block;
  font-size:14px;
  white-space: nowrap;
  overflow:hidden; 
  text-overflow:ellipsis;
}

.loading{
  text-align: center;
  padding: 15px 0;
  vertical-align:middle;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loadImg{
  width: 25px;
  display: inline-block;
  margin-right:5px;
}

.loadText{
  display: inline-block;
}

.layer{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top:0 ;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.select-list{
  width: 100%;
  background-color: white;
  position: absolute;
  z-index: 11;
  top: 30px;
}

.select-item{
  padding:10px 0;
}

.textColor{
  color: red;
}

.list-air{
  text-align: center;
  font-size: 14px;
  padding:15px 0;
}